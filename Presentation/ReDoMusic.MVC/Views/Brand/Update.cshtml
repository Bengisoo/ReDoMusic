@using ReDoMusic.Core.Domain.Entities;
@model Brand 

﻿<h2>Update Brand</h2>

<form method="post">
    <div class="mb-3 mt-3">
        <label class="form-label">Brand Name:</label>
        <input type="text" class="form-control" value="@Model.Name" name="brandName">
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label">Displaying Text:</label>
        <input type="text" class="form-control" value="@Model.DisplayingText" name="brandDisplayingText">
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label">Address:</label>
        <input type="text" class="form-control" value="@Model.Address" name="brandAddress">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>