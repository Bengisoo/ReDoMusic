﻿@using ReDoMusic.Core.Domain.Entities;
@model List<Brand>

<div class="container mt-3">
    <h2>Brands</h2>
    <table class="table  table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Address</th>
                <th width="20px">Update</th>
                <th width="20px">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brand in Model.OrderBy(b => b.Name))
            {
                <tr>
                    <td>@brand.Name</td>
                    <td>@brand.DisplayingText</td>
                    <td>@brand.Address</td>
					<td><a href="/brand/update/@brand.Id" class="btn btn-success">Update</a></td>
                    <td><a href="/brand/delete/@brand.Id" class="btn btn-danger">Delete</a></td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>